    "dotenv": "^8.2.0",
    "ethers": "^5.0.29",
    "ganache-cli": "^6.12.1",
    "hardhat": "^2.0.4",
    "solidity-coverage": "^0.7.13",
    "truffle": "^5.1.56"
  }
}
